function dcomsh() {
  if [ "$1" = "" ];then
    docker-compose exec app sh
  else
    docker-compose exec $1 sh
  fi
}

function dcombash() {
  if [ "$1" = "" ];then
    docker-compose exec app bash
  else
    docker-compose exec $1 bash
  fi
}

