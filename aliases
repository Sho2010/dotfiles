# ls
case "${OSTYPE}" in
darwin*)
  alias ls='ls -G'
  alias ll='ls -la'
  alias la="ll"
  ;;
linux*)
  alias ls='ls --color'
  alias ll='ls -l --color'
  alias la='ls -la --color'
  ;;
esac

