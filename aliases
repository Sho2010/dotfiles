function gssh() {
  $(gcloud compute instances list | peco | awk '{print "gcloud compute ssh --zone " $2 " " $1}')
}

function switch-k8s-namespace() {
  if [ -z $1 ]; then
    kubens `kubens | peco`
    return 0
  fi
  kubens $1
}

function switch-k8s-context() {
  if [ -z $1 ]; then
    kubectx `kubectx | peco`
    return 0
  fi
  kubectx $1
}

