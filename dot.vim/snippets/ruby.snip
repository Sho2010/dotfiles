snippet     unittest
  require "test_helper"

  class ${1:`substitute(expand('%:t:r:r:r'), '\v%(^(.)|_(.))', '\u\1\u\2', 'g')`} < ActiveSupport::TestCase
  end

snippet     pry
abbr        pry
alias       pry
  binding.pry

snippet     pry-require
  require 'pry'
  require 'pry-byebug'
  binding.pry

snippet     test
  test "${1:the truth}" do
    ${2}
  end

snippet assert_raise
  assert_raise ${1:StarndardError} do
    ${2}
  end

